<?xml version="1.0" encoding="UTF-8"?>
<!-- voz portugues: pt-BR_IsabelaV3Voice -->
<!-- voz inglês		: en-US_AllisonV3Voice" -->
<evaml name="script07">
	<settings>
		<voice tone="pt-BR_IsabelaV3Voice" />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
  <script>
		<counter var="x" op="=" value="0" />
		<light id="INICIO" state="on" color="white" />
		<talk>Está chovendo agora?</talk>
		<listen />
		<switch var="$">
			<case op="contain" value="sim">
				<talk>Isso mesmo! Está chovendo</talk>
				<counter var="x" op="+" value="1" />
				<switch var="x">
					<case op="eq" value="3">
						<talk>O x chegou a 3, vou terminar</talk>
					</case>
					<case op="lt" value="3">
						<goto target="INICIO" />
					</case>
				</switch>
			</case>
			<case op="contain" value="não">
				<talk>Você errou! Tente novamente</talk>
				<goto target="INICIO" />
			</case>
		</switch>
	</script>
  <macros>
  </macros>
</evaml>
