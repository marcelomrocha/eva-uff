<evaml name="script10">
	<settings>
		<voice tone="en-US_AllisonV3Voice" />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
	<script>
		<random max="1" min="1" />
		<light color="blue" state="on" />
		<talk>Hello, what is your name</talk>
		<listen />
		<light color="yellow" state="on" />
		<evaEmotion emotion="happy" />
		<talk>Hi $, nice to meet you / Hi $, what's up? / It's good to have you $</talk>
		<light color="green" state="on" />
		<evaEmotion emotion="neutral" />
		<talk>How are you feeling?</talk>
		<userEmotion />
		<light color="white" state="on" />
		<switch var="$">
			<case op="exact" value="angry">
				<evaEmotion emotion="angry" />
				<talk>Hey $-1, I see that you are $. Stay calm</talk>
			</case>
			<case op="exact" value="sad">
				<evaEmotion emotion="sad" />
				<talk>Ow no, $-1, I see that you are $. Cheer up</talk>
			</case>
			<case op="exact" value="happy">
				<evaEmotion emotion="happy" />
				<talk>Very good $-1. I will play a song</talk>n
				<audio block="true" source="song-mj-preview-small" />
			</case>
			<default>
				<evaEmotion emotion="sad" />
				<talk>I couldn't identify how you feel</talk>
			</default>
		</switch>
		<evaEmotion emotion="neutral" />
		<talk>Bye bye</talk>
		<light state="off" />
	</script>
	</evaml>