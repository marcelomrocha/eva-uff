<?xml version="1.0" encoding="UTF-8"?>
<!-- voz portugues: pt-BR_IsabelaV3Voice -->
<!-- voz inglês		: en-US_AllisonV3Voice" -->
<evaml name="script08">
	<settings>
		<voice tone="pt-BR_IsabelaV3Voice" />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
	<script>
		<talk>Olá, eu sou o robô EVA</talk>
		<audio source="mario-game-intro" block="true" />
		<talk>Qual o seu nome?</talk>
		<listen />
		<useMacro name="PARTE1" />
		<counter var="p" op="=" value="0" /> <!-- pontuacao -->
		<counter var="i" op="=" value="1" /> <!-- controle do num. de repeticoes-->
		<talk id="INICIO">Vamos lá então</talk>
		<wait duration="1000" />
		<light state="on" color="white" />
		<random min="1" max="3" />
		<switch var="$">
			<case op="exact" value="1">
				<light state="on" color="blue" />
				<talk>Qual foi o número?</talk>
				<listen />
				<switch var="$">
					<case op="contain" value="1">
						<talk>Parabéns, eu pensei no número 1. Você acertou!</talk>
						<counter var="p" op="+" value="1" />
					</case>
					<default>
						<talk>Você errou, eu pensei no número um</talk>
					</default>
				</switch>
			</case>
			<case op="exact" value="2">
				<light state="on" color="pink" />
				<talk>E ai? Qual foi  o número?</talk>
				<listen />
				<switch var="$">
					<case op="contain" value="2">
						<talk>Parabéns, eu pensei no número 2. Você acertou!</talk>
						<counter var="p" op="+" value="1" />
					</case>
					<default>
						<talk>Você errou, eu pensei no número dois</talk>
					</default>
				</switch>
			</case>
			<case op="exact" value="3">
				<light state="on" color="green" />
				<talk>E ai? Qual foi  o número?</talk>
				<listen />
				<switch var="$">
					<case op="contain" value="3">
						<talk>Parabéns, eu pensei no número 3. Você acertou!</talk>
						<counter var="p" op="+" value="1" />
					</case>
					<default>
						<talk>Você errou, eu pensei no número três</talk>
					</default>
				</switch>
			</case>
		</switch>
		<light state="on" color="white" />
		<switch var="i">
			<case op="eq" value="3">
				<talk>O seu número de pontos foi #p</talk>
				<useMacro name="FINAL" />
				<audio source="mario-end" block="true" />
				<light state="off" color="black" />
				<stop />
			</case>
			<default>
				<counter var="i" op="+" value="1" />
				<goto target="INICIO" />
			</default>
		</switch>
	</script>
	<macros>
		<macro name="PARTE1">
			<talk>Vou sortear um número de um a três</talk>
			<talk>quero ver se você consegue advinhar $</talk>
		</macro>
		<macro name="FINAL">
			<talk>Já vou embora / Está ficando tarde / Pra mim já deu</talk>
		</macro>
	</macros>
</evaml>
