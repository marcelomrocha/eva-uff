<?xml version="1.0" encoding="UTF-8"?>
<evaml id="a1001-b3001" name="Therapy02">
	<settings>
		<voice tone="en-US_AllisonV3Voice" />
		<lighting-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
	<script>
    <evaEmotion id="BEGIN" emotion="neutral" />
    <light state="on" color="#ffffff" />
    <talk>I will choose a number between 1 and 3</talk>
    <talk>When the number is 3 I will finish</talk>
    <random min="1" max="3"/>
    <switch>
      <case value="1">
        <light state="on" color="#0000ff" />
        <evaEmotion emotion="sad" />
        <wait duration="1000" />
        <talk>The number chosen was the $</talk>
        <goto target="BEGIN" />
      </case>
      <case value="2">
        <light state="on" color="#ff0000" />
        <evaEmotion emotion="anger" />
        <wait duration="1000" />
        <talk>The number chosen was the $</talk>
        <goto target="BEGIN" />
      </case>
      <case value="3">
        <light state="on" color="#00ff00" />
        <evaEmotion emotion="joy" />
        <wait duration="1000" />
        <talk>The number chosen was the $</talk>
      </case>
    </switch>
    <talk>Bye bye</talk>
	</script>
  <macros>
  </macros>
</evaml>
